﻿<div class="user-profile">

    <div class="profile-field">
        <label for="FirstNameValue" class="field-label">First name: </label>
        <span id="FirstNameValue">@Model.FirstName</span>
    </div>

    <div class="profile-field">
        <label for="LastNameValue" class="field-label">Last name: </label>
        <span id="LastNameValue">@Model.LastName</span>
    </div>


    <div class="profile-field">
        <label for="UserNameValue" class="field-label">Username: </label>
        <span id="UserNameValue">@Model.UserName</span>
    </div>

    <div class="profile-field">
        <label for="EmailValue" class="field-label">Email: </label>
        <span id="EmailValue">@Model.Email</span>
    </div>




  
</div>
