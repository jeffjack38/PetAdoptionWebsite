@model List<PetAdoptionWebsite.Models.User>

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>

                <td>
                    <a asp-action="ViewUserProfile" asp-route-Id="@user.Id">View Profile</a> |
                    <a asp-action="EditUser" asp-route-Id="@user.Id">Edit</a> |
                    <a asp-action="DeleteUser" asp-route-Id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
