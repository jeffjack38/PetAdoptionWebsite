@model PetAdoptionWebsite.Models.AddPetViewModel

<h2>Add New Pet</h2>

<form asp-action="AddPet" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Species"></label>
        <input asp-for="Species" class="form-control" />
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" type="number" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

      <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BondedBuddyStatus"></label>
        <input asp-for="BondedBuddyStatus" class="form-control" />
        <span asp-validation-for="BondedBuddyStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SpecialCareInstructions"></label>
        <textarea asp-for="SpecialCareInstructions" rows="4" class="form-control"></textarea>
        <span asp-validation-for="SpecialCareInstructions" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Pet</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
